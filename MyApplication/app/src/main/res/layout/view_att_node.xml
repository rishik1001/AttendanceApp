<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/std_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Sai Praneeth (20MCME18)"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/attendance_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="80 %"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/classes_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/std_name"
        android:text="Number of Classes Done = "
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/classes_attended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/classes_done"
        android:text="Number of Classes Attended = "
        android:textColor="@color/black"
        android:textSize="14sp" />
</RelativeLayout>
